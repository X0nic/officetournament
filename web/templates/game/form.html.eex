<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below:</p>
      <ul>
        <%= for {attr, message} <- f.errors do %>
          <li><%= humanize(attr) %> <%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :league_id, "League", class: "control-label" %>
    <%= number_input f, :league_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label f, :home_id, "Home", class: "control-label" %>
    <%= number_input f, :home_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label f, :away_id, "Away", class: "control-label" %>
    <%= number_input f, :away_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
