<%= form_for @conn, login_path(@conn, :index), [name: :login], fn f -> %>

  <div class="form-group">
    <label>Login: 
      <%= text_input f, :login %>
    </label>
  </div>

  <div class="form-group">
    <label>Password: 
      <%= password_input f, :login %>
    </label>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
